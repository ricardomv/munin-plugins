case $1 in
   config)
        cat <<'EOM'
graph_title Installed packages
graph_vlabel Packages
graph_category system
core.label core
core.draw AREA
extra.label extra
extra.draw STACK
community.label community
community.draw STACK
aur.label aur
aur.draw STACK
updates.label updates
updates.draw LINE2
updates.warning 1
EOM
        exit 0;;
esac

printf "core.value "
paclist core | wc -l

printf "extra.value "
paclist extra | wc -l

printf "community.value "
paclist community | wc -l

printf "aur.value "
pacman -Qm | wc -l

printf "updates.value "
checkupdates | wc -l
